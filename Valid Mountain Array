public bool ValidMountainArray(int[] arr) {
        //Handle Edge cases
        if(arr.Length<3)return false;
        //Climbing the Array
        int i=0;
        for(;i<arr.Length-1 && arr[i]<arr[i+1];i++){}        
        //Check last or first Peak
        if(i==0 || i==arr.Length-1)return false;
        //Let's Downhill
        for(;i<arr.Length-1 && arr[i]>arr[i+1];i++){}
        return i==arr.Length-1;        
  }
